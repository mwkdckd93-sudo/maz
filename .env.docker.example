# ============================================
# MAZAD BACKEND - Docker Environment Variables
# ============================================
# Copy this to .env and fill in secure values!
# NEVER commit the .env file to git!
# ============================================

# MySQL Database - REQUIRED
MYSQL_ROOT_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
MYSQL_DATABASE=mazad_db
MYSQL_USER=mazad_user
MYSQL_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# JWT - REQUIRED (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=CHANGE_THIS_TO_A_64_CHARACTER_RANDOM_STRING

# Server
NODE_ENV=production
PORT=3000
BASE_URL=https://api.hajja.app
